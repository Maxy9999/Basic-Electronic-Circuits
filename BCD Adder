module bcd_adder (
    input wire [3:0] a,
    input wire [3:0] b,
    input wire cin,
    output reg [3:0] sum,
    output reg cout
);

reg [4:0] temp_sum;

always @(*) begin
    temp_sum = a + b + cin;
    if (temp_sum > 4'b1001) begin
        temp_sum = temp_sum + 4'b0110;
        cout = 1;
    end else begin
        cout = 0;
    end
    sum = temp_sum[3:0];
end

endmodule
